<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="websocket" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
            <class>separator-top</class>
            <label>WebSocket</label>
            <tab>mage_stack_tab</tab>
            <resource>MageStack_FirePush::Config</resource>
            <group id="firebase" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Google firebase</label>
                <field id="is_enabled" translate="label" type="select" showInDefault="1"  showInWebsite="1" showInStore="0" canRestore="1" sortOrder="10"> 
                    <label>Is enabled?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="firebase_config" translate="label" type="file" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Back-end config</label>
                    <backend_model>MageStack\FirePush\Model\Config\Backend\ConfigUploader</backend_model>
                    <frontend_model>MageStack\FirePush\Block\Admin\Config\Frontend\MaskData</frontend_model>
                    <depends>
                        <field id="is_enabled">1</field>
                    </depends>
                </field>
                <field id="frontend_firebase_config" translate="label" type="file" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Front-end config</label>
                    <backend_model>MageStack\FirePush\Model\Config\Backend\FronEndConfUploader</backend_model>
                    <frontend_model>MageStack\FirePush\Block\Admin\Config\Frontend\MaskData</frontend_model>
                    <depends>
                        <field id="is_enabled">1</field>
                    </depends>
                </field>
                <field id="vap_pub_key" translate="label" type="obscure" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1" sortOrder="40">
                    <label>VAP public key</label>
                    <depends>
                        <field id="is_enabled">1</field>
                    </depends>
                    <validate>required-entry</validate>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                </field>
            </group>
        </section>
    </system>
</config>